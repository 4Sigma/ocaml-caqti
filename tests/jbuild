; Fake META Files

(alias ((name drivers) (deps (META.caqti))))
(rule
 ((targets (META.caqti))
  (deps (../META.caqti))
  (action
   (with-stdout-to ${@}
    (progn
      (echo "directory = \"../lib\"\n")
      (cat ${<}))))))

(alias ((name drivers) (deps (META.caqti-driver-mariadb))))
(rule
 ((targets (META.caqti-driver-mariadb))
  (deps (../META.caqti-driver-mariadb))
  (action
   (with-stdout-to ${@}
    (progn
      (echo "directory = \"../lib\"\n")
      (cat ${<}))))))

