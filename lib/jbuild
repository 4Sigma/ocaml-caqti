(jbuild_version 1)

(library
 ((name caqti)
  (public_name caqti)
  (wrapped false)
  (modules
   (Caqti_connect
    Caqti_connect_sig
    Caqti_connection_sig
    Caqti_driver_lib
    Caqti_driver_info
    Caqti_error
    Caqti_driver_sig
